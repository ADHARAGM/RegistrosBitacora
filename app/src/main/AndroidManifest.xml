<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Base.Theme.RegistrosBitacora"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.salida.VisitasSalidaActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.view.salida.VehiculosSalidaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.salida.PersonalSalidaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.entrada.VehiculosEntradaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.entrada.VisitasEntradaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.entrada.PersonalEntradaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.salida.SalidaMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.entrada.EntradaMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.RegistrosBitacora">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>